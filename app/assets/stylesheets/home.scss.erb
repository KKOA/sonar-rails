@import "bootstrap-sprockets";
@import "bootstrap";


/* ==========================================================
! color
========================================================== */
$white: #fff;
$black: #000;
$red: #a80000;
$green: #438500;
$translucentWhite: rgba(255,255,255,0.85);
// $transparent

/* ==========================================================
! Generic
========================================================== */

@media (min-width: 768px)
{
  .col-sm-offset-center-1 {
    margin-left: 4.165%;
    margin-right: 4.165%;
  }
}

body {
  background: #d7d7d7;
}

.row {
  margin-left: 0;
  margin-right: 0;
}

/* ==========================================================
! Logo & Tag line
========================================================== */
.logo-container {
  background: $white;
  padding: 20px 0;
}

.brand {
  color: $black;
  font-size: 24px;
  font-weight: bold;
  margin-left: 10px;
}

.site-name {
  margin-left: 10px;
}

.tagline {
  display: none;
}

@media (min-width: 768px)
{
  .tagline {
    border-left: solid 2px $black;
    display: inline;
    margin: 0 0 0 20px;
    padding: 0 0 0 20px;
    position: relative;
    top: -4px;
  }
}
/* ==========================================================
! search
========================================================== */

#home-search-container {
  background-image: url(<%= asset_path 'search-min.jpg' %>);
  background-repeat: no-repeat;
  background-position:center center;
  min-height: 340px;
  padding: 20px 0;
}

.searchForm-wrapper
{
  background:$translucentWhite;
}

#search-btn {
  background: $green;
  color: $white;
  font-size: 18px;
  padding: 10px;
  text-shadow: -1px -1px 0 $black;
}

/* ==========================================================
! SearchResults
========================================================== */

.property
{
  // border:solid 1px $black;
  min-height:400px;
  margin-top:20px;
  margin-bottom:20px;
  background:$white;
}

#results
{
  // margin-top: 20px;
}

.prop-address
{
  background:$green;
  color:white;
  font-weight:bold;
  margin-left: -15px;
  margin-right: -15px;
  padding:10px;
}

.prop-photo-link
{
  display:block;
  img
  {
    margin:auto;
  }
}

.prop-price
{
  font-wieght:bold;
}

/* ==========================================================
! Modal - single property
========================================================== */

.modal-content { background: #d7d7d7; }

.modal-header
{
  background:$green;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  color: $white;
}

.modal-header .close
{
  background: $white;
  border-radius: 50%;
  border: 2px solid $black;
  opacity: 0.5;
  padding: 5px 10px;
}

.modal-header .close:hover
{
  background:$black;
  color:$white;
  opacity:1;
  text-shadow: 0 1px 0 $white;
}

.nav-tabs>.active { font-weight: bold; }

.nav-tabs>li>a
{
  background: #a2a2a2;
  color: $white;
}

.nav-tabs>li>a:hover
{
  background: #a2a2a2;
  text-decoration: underline;
}

.tab-content { background: $white; }

.tab-pane { padding: 20px; }

.agency-link
{
  display: block;
  margin: 0 auto;
  width: 50%;
}


/* ==========================================================
! pagefooter
========================================================== */

.pagefooter {
  background: #3a3a3a;
  color: $white;
}

.copyright {
  border-bottom: 3px double #5a5a5a;
  border-top: 3px double #5a5a5a;
  font-size: 85%;
  margin: 20px 0;
  padding: 10px;

}
